local Players = game:GetService("Players")
local lplr = Players.LocalPlayer
local StarterGui = game:GetService("StarterGui")
local SoundService = game:GetService("SoundService")

-- GUI Setup
local gui = Instance.new("ScreenGui")
gui.Name = "Aint_MobileUI"
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false
pcall(function() gui.Parent = game.CoreGui end)

-- Toggle Button [+/-]
local toggleBtn = Instance.new("TextButton", gui)
toggleBtn.Size = UDim2.new(0, 40, 0, 40)
toggleBtn.Position = UDim2.new(0, 10, 0.5, -20)
toggleBtn.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
toggleBtn.Text = "-"
toggleBtn.TextColor3 = Color3.new(1, 1, 1)
toggleBtn.TextScaled = true
toggleBtn.Font = Enum.Font.GothamBold
toggleBtn.ZIndex = 999

-- Main Draggable Frame
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 260, 0, 330)
frame.Position = UDim2.new(0.5, -130, 0.5, -165)
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
frame.BorderSizePixel = 2
frame.BorderColor3 = Color3.fromRGB(255, 0, 0)
frame.Active = true
frame.Draggable = true

-- Title
local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 35)
title.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
title.Text = "üî• Aintnoway123n TS GUI"
title.TextColor3 = Color3.new(1, 1, 1)
title.TextScaled = true
title.Font = Enum.Font.GothamBlack

-- Scrollable Area
local scroll = Instance.new("ScrollingFrame", frame)
scroll.Position = UDim2.new(0, 0, 0, 35)
scroll.Size = UDim2.new(1, 0, 1, -75)
scroll.CanvasSize = UDim2.new(0, 0, 0, 700)  -- increased size for more buttons
scroll.ScrollBarThickness = 6
scroll.BackgroundTransparency = 1

local layout = Instance.new("UIListLayout", scroll)
layout.Padding = UDim.new(0, 5)
layout.SortOrder = Enum.SortOrder.LayoutOrder

-- Sound Effect
local function playSound(soundId)
	local sound = Instance.new("Sound")
	sound.SoundId = "rbxassetid://" .. soundId
	sound.Volume = 1
	sound.Parent = SoundService
	sound:Play()
	sound.Ended:Connect(function()
		sound:Destroy()
	end)
end

-- Toggle visibility
toggleBtn.MouseButton1Click:Connect(function()
	playSound("2865227271")
	frame.Visible = not frame.Visible
	toggleBtn.Text = frame.Visible and "-" or "+"
end)

-- Button Creator
local function createButton(txt, color, url)
	local btn = Instance.new("TextButton", scroll)
	btn.Size = UDim2.new(1, -20, 0, 50)
	btn.BackgroundColor3 = color
	btn.TextColor3 = Color3.new(1, 1, 1)
	btn.Text = txt
	btn.TextScaled = true
	btn.Font = Enum.Font.GothamBold
	btn.LayoutOrder = 0

	btn.MouseButton1Click:Connect(function()
		playSound("2865227271")
		local success, result = pcall(function()
			return loadstring(game:HttpGet(url))()
		end)
		StarterGui:SetCore("SendNotification", {
			Title = txt,
			Text = success and "‚úÖ Loaded successfully" or "‚ùå Failed to load!",
			Duration = 4
		})
	end)
end

